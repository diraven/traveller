  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/index.js",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "cwd": "${workspaceRoot}",
